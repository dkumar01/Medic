<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_list_item"
        tools:context="com.example.deepakkumar.medic.Register">

    <!-- Statistics id  will be HIDDEN - used to pass to other activity -->

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/statistics_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        <TextView
                android:id="@+id/date_of_submission"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dip"
                android:paddingLeft="6dip"
                android:textSize="17dip"
                android:textStyle="bold"/>
        <TextView
                android:id="@+id/glucose_level"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dip"
                android:paddingLeft="6dip"
                android:textSize="17dip"
                android:textStyle="bold"/>
        <TextView
                android:id="@+id/cholesterol"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dip"
                android:paddingLeft="6dip"
                android:textSize="17dip"
                android:textStyle="bold"/>
        <TextView
                android:id="@+id/weight"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dip"
                android:paddingLeft="6dip"
                android:textSize="17dip"
                android:textStyle="bold"/>
        <TextView
                android:id="@+id/comments"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dip"
                android:paddingLeft="6dip"
                android:textSize="17dip"
                android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>